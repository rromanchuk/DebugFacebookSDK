# -*- coding: utf-8 -*-
$:.unshift("/Library/RubyMotion/lib")
require 'motion/project/template/ios'

begin
  require 'bundler'
  Bundler.require
rescue LoadError
end

Motion::Project::App.setup do |app|

  app.pods do
    pod 'Facebook-iOS-SDK'
  end

  # Use `rake config' to see complete project settings.
  app.name = 'FacbookIntegration'
end
